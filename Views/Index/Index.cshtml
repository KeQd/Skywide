@model Skywide.Models.IndexViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Login</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
	<link rel="stylesheet" href="~/css/main.css" />
</head>
<body>
	<div class="whole-page">
		<div class="toolbar">
			<div class="toolbar-left">
				<div style="width:100%; height:10px;"></div>
				<a class="create-post" href="~/CreateNewPost/CreateNewPost">New post <i style="margin-left:5px;" class="fa-solid fa-plus"></i></a>
				<a class="create-post" href="~/CreateNewCategory/CreateNewCategory" style="font-size:1.6em;">New category <i style="margin-left:5px;" class="fa-solid fa-plus"></i></a>
			</div>
			<div class="toolbar-mid">
				<form id="search-form" method="get" asp-action="Index" asp-controller="Index">
					<input type="text" class="search" id="searchQuery" name="searchQuery" placeholder="Search by title..." value="@ViewData["searchQuery"]" />
				</form>
			</div>
			<div class="toolbar-right">
				<a class="user-profile" href="~/Account/Account">@Model.Username</a>
			</div>
		</div>
		<div class="page-main">
			<div style="height:100%; width:20%"></div>
			<div class="user-wall">
				<div class="wall-content">
					fake
				</div>
			</div>
			<div class="threads">
				<div class="explore-threads"></div>
			</div>
		</div>
	</div>
	<script>
		// Funkcja wywoływana przy naciśnięciu klawisza Enter
		document.addEventListener("DOMContentLoaded", function() {
			const searchInput = document.getElementById("searchQuery");

			// Reakcja na naciśnięcie Enter
			searchInput.addEventListener("keydown", function(event) {
				if (event.key === "Enter") {
					event.preventDefault();  // Zapobieganie domyślnej akcji formularza
					document.getElementById("search-form").submit();  // Zatwierdzenie formularza
				}
			});
		});
	</script>
</body>
</html>
