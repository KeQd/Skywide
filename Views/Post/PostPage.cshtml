@model Skywide.Models.PostPageViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@Model.Post.Title</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
	<link rel="stylesheet" href="~/css/posts_pages.css" />
</head>
	<body>
		<div class="whole-page">
			<div class="toolbar">
				<div class="toolbar-left">
				</div>
				<div class="toolbar-mid">
					<a class="skywide" href="~/Index/Index">Skywide.com</a>
				</div>
				<div class="toolbar-right">
					<a class="user-profile" href="~/Account/Account">@Model.Username</a>
					<form class="logout" method="post" asp-controller="Account" asp-action="Logout">
						<button type="submit" class="logout-button" title="Logout">
							<i class="fa-solid fa-arrow-right-from-bracket"></i>
						</button>
					</form>
				</div>
			</div>
			<div class="page-main">
				<div class="filler"></div>
				<div class="wall">
					<div class="post-wall">
						<h2 class="post-title">@Model.Post.Title</h2>
						<p class="post-content">@Html.Raw(Model.Post.Content)</p>
					</div>
					<div class="separator"></div>
					<div class="post-newcomment">
						<form method="post" class="form-addcomment" asp-action="NewComment">
						<input type="hidden" name="postId" value="@Model.Post.PostID" />
						<div class="comment-field-div">
							<textarea name="CommentText" id="CommentText" class="comment-field"></textarea>
							<button class="add-comment" type="submit">Add comment</button>
						</div>
						</form>
					</div>
					<div class="separator"></div>
					<div class="post-comments">
					<partial name="_CommentsPartial" model="@Model.Comments"/>
					</div>
				</div>
				<div class="filler"></div>
			</div>
		</div>
	</body>
</html>
